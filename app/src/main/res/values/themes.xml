<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MonoVpn" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="HeaderText">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/maven_pro_bold</item>
    </style>

    <style name="BodyTitleText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/maven_pro</item>
    </style>

    <style name="CheckedTextView">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/maven_pro</item>
    </style>
</resources>